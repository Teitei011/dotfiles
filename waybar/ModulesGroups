// In your ModulesGroups or main config file

"custom/cpu-temp-average": {
    "exec": "~/.config/waybar/scripts/cpu_temp_avg.sh",
    "return-type": "json", // IMPORTANT: Tell Waybar to parse JSON from the script
    "format": "{text}", // Use the 'text' field from the JSON output
                            // The script now includes the icon in its 'text' field.
    "interval": 5,
    // "tooltip": false, // Remove this, as the script now provides a tooltip in the JSON
    // If you want to customize the tooltip format here instead of in the script:
    "tooltip-format": "{tooltip}" // This will use the "tooltip" field from the script's JSON
},

"custom/gpu": {
  "exec": "~/.config/waybar/scripts/gpu_usage.sh",
  "interval": 5,  // Update every 5 seconds
  "return-type": "json",
  "format": "{}",
  "tooltip": false
},
